<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action class="khoavm.actions.LoginAction" name="LoginAction">
            <result name="input">login.jsp</result>
            <result name="admin">admin.jsp</result>
            <result name="user" type="redirectAction">
                <param name="actionName">GetProductAction</param>
            </result>
        </action>
        <action class="khoavm.actions.LoginAction" name="">
            <result name="input">login.jsp</result>
            <result name="admin">admin.jsp</result>
            <result name="user" type="redirectAction">
                <param name="actionName">GetProductAction</param>
            </result>
        </action>
        <action class="khoavm.actions.SearchAction" name="SearchAction">            
            <result name="success">admin.jsp</result>          
        </action>
        <action class="khoavm.actions.DeleteAction" name="DeleteAction">            
            <result name="search" type="redirectAction">
                <param name="actionName">SearchAction</param>
                <param name="txtSearch">${txtLastName}</param>
            </result>          
        </action>
        <action class="khoavm.actions.EditAction" name="EditAction">            
            <result name="update">update.jsp</result>          
        </action>
        <action class="khoavm.actions.UpdateAction" name="UpdateAction">            
            <result name="success" type="redirectAction">
                <param name="actionName">SearchAction</param>
                <param name="txtSearch">${txtUpdateSearch}</param>               
            </result>    
            <result name="fail">update.jsp</result>      
        </action>
        <action class="khoavm.actions.SearchProductAction" name="SearchProductAction">            
            <result name="search">admin.jsp</result>          
        </action>
        <action class="khoavm.actions.DeleteProductAction" name="DeleteProductAction">            
            <result name="search" type="redirectAction">
                <param name="actionName">SearchProductAction</param>
                <param name="txtProductSearch">${txtProductName}</param>
                <param name="typeSelect">${typeSelected}</param>
            </result>          
        </action>
        <action class="khoavm.actions.EditProductAction" name="EditProductAction">            
            <result name="update">product_update.jsp</result>          
        </action>
        <action class="khoavm.actions.UpdateProductAction" name="UpdateProductAction">            
            <result name="success" type="redirectAction">
                <param name="actionName">SearchProductAction</param>
                <param name="txtProductSearch">${txtUpdateSearch}</param>
                <param name="typeSelect">${type}</param>               
            </result>    
            <result name="fail">product_update.jsp</result>      
        </action>
        <action class="khoavm.actions.GetSupIdAction" name="GetSupIdAction">            
            <result name="insert">product_insert.jsp</result>          
        </action>
        <action class="khoavm.actions.InsertAction" name="InsertAction">
            <result name="success">admin.jsp</result>
            <result name="fail">product_insert.jsp</result>
        </action>
        <action name="RegisterAction" class="khoavm.actions.RegisterAction">
            <result name="success">login.jsp</result>
            <result name="fail">register.jsp</result>
        </action>
        <action name="ChangePasswordAction" class="khoavm.actions.ChangePasswordAction">
            <result name="success">login.jsp</result>
            <result name="fail">password_update.jsp</result>
        </action>
        <action name="LogOutAction" class="khoavm.actions.LogOutAction">
            <result name="logout" type="redirectAction">
                <param name="actionName" >LoginAction</param>
            </result>
        </action>
        <action name="GetProductAction" class="khoavm.actions.GetProductAction">
            <result name="user">user.jsp</result>
        </action>
        <action name="AddToCartAction" class="khoavm.actions.AddToCartAction">
            <result name="cart" type="redirectAction">
                <param name="actionName">GetProductAction</param>
            </result>
        </action>
        <action name="RemoveItemsAction" class="khoavm.actions.RemoveItemsAction">
            <result name="viewcart">view_cart.jsp</result>
        </action>
        <action name="OrderAction" class="khoavm.actions.OrderAction">
            <result name="success">success_order.jsp</result>
            <result name="fail">view_cart.jsp</result>            
        </action>
    </package>
</struts>
